<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:windowSoftInputMode="adjustResize"
    tools:context=".ReadingActivity">

    <TextView
        android:id="@+id/addReadingTitleTextView"
        android:layout_width="166dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Add Reading"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addReadingTitleTextView">

        <TextView
            android:id="@+id/patientIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient ID"
            tools:layout_editor_absoluteX="62dp"
            tools:layout_editor_absoluteY="97dp" />

        <Spinner
            android:id="@+id/patientIdSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/readingIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reading ID"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="164dp" />

        <EditText
            android:id="@+id/readingIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            tools:layout_editor_absoluteX="45dp"
            tools:layout_editor_absoluteY="170dp" />

        <TextView
            android:id="@+id/readingDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reading Date" />

        <EditText
            android:id="@+id/readingDateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/readingTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reading Type"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="189dp" />

        <Spinner
            android:id="@+id/readingTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/readingType" />

        <TextView
            android:id="@+id/readingValTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reading Value"
            tools:layout_editor_absoluteX="66dp"
            tools:layout_editor_absoluteY="298dp" />

        <EditText
            android:id="@+id/readingValEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="287dp" />

        <TextView
            android:id="@+id/readingUnitTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unit of Measurement"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="398dp" />

        <Spinner
            android:id="@+id/readingUnitSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/readingUnit"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="319dp" />

        <TextView
            android:id="@+id/readingClinicTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clinic of Reading"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="373dp" />

        <Spinner
            android:id="@+id/readingClinicSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/readingSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="416dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>